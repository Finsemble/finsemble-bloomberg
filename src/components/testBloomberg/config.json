{
    "appd": {
        "Bloomberg Bridge tester": {
            "appId": "Bloomberg Bridge tester",
            "name": "Bloomberg Bridge tester",
            "description": "The Bloomberg Bridge tester makes testing Finsemble's Bloomberg Terminal connection integration easier.",
            "manifest": {
                "window": {
                    "url": "$applicationRoot/components/testBloomberg/testBloomberg.html",
                    "addToWorkspace": true,
                    "options": {
                        "resizable": true,
                        "autoShow": true,
                        "alwaysOnTop": false
                    },
                    "top": "center",
                    "left": "center",
                    "width": 800,
                    "height": 600
                },
                "component": {
                    "spawnOnStartup": false
                },
                "foreign": {
                    "services": {
                        "windowService": {
                            "manageWindowMovement": true,
                            "allowAutoArrange": true,
                            "allowSnapping": true,
                            "allowTabbing": true,
                            "allowTiling": true,
                            "allowGrouping": true,
                            "allowMinimize": true
                        },
                        "workspace": {}
                    },
                    "components": {
                        "App Launcher": {
                            "launchableByUser": true
                        },
                        "Window Manager": {
                            "alwaysOnTopIcon": true,
                            "title": "Bloomberg Bridge tester",
                            "persistWindowState": true
                        },
                        "Toolbar": {
                            "iconURL": "$applicationRoot/components/testBloomberg/Finsemble_Taskbar_Icon.png"
                        }
                    }
                }
            },
            "version": "1.0.0",
            "tooltip": "Bloomberg Bridge test component"
        }
    }
}